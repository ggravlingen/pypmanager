{
  "name": "Pypmanager",
  "context": "..",
  "dockerFile": "Dockerfile.dev",
  "containerUser": "root",
  "remoteUser": "root",
  "runArgs": [
    "-e",
    "GIT_EDITOR=code --wait"
  ],
  "postCreateCommand": "script/setup.sh",
  "containerEnv": {
    "DEVCONTAINER": "1",
    "VIRTUAL_ENV": "/workspaces/pypmanager/.venv",
    "PATH": "/workspaces/pypmanager/.venv/bin:${localEnv:PATH}"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/workspaces/pypmanager/.venv/bin/python",
        "python.defaultInterpreterPath": "/workspaces/pypmanager/.venv/bin/python",
        "python.languageServer": "Pylance",
        "python.analysis.extraPaths": [
          "/workspaces/pypmanager"
        ],
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnPaste": false,
          "editor.formatOnType": true
        },
        "python.testing.pytestEnabled": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh",
            "args": ["-c", "source /workspaces/pypmanager/.venv/bin/activate && exec zsh"]
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.vscode-pylance",
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "mechatroner.rainbow-csv"
      ]
    }
  }
}
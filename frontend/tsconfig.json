{
  "include": ["src"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "types": ["react", "react-dom", "node"],
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "baseUrl": "./src",
  "paths": {
    "@Api": ["Api"]
  }
}
